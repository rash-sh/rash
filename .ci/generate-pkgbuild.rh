#!/usr/bin/env rash
# Usage: generate-pkgbuild.rh <target>

- assert:
    that:
      - "env.PROJECT_NAME is defined"
      - "env.PROJECT_VERSION is defined"
      - "env.PROJECT_DESCRIPTION is defined"
      - "env.PROJECT_HOMEPAGE is defined"

- command: curl -s -L https://github.com/rash-sh/rash/releases/download/v{{ env.PROJECT_VERSION }}/rash-{{ env.PROJECT_VERSION }}-x86_64-unknown-linux-gnu.tar.gz.sha256
  register: checksum_file
  when: "'bin' in target"

- set_vars:
    checksum: "{{ checksum_file.output | split(' ') | first }}"
  when: "'bin' in target"

- name: Create {{ target }}
  template:
    src: "{{ rash.dir }}/{{ target }}.j2"
    dest: "{{ target }}"

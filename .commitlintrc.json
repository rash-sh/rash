{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "docs",
        "feat",
        "fix",
        "refactor",
        "release",
        "revert",
        "style",
        "test"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "book",
        "ci",
        "cli",
        "core",
        "deps",
        "derive",
        "docker",
        "filter",
        "group",
        "jinja",
        "lookup",
        "module",
        "task",
        "vars"
      ]
    ],
    "subject-case": [
      2,
      "always",
      [
        "sentence-case",
        "lower-case"
      ]
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "body-max-line-length": [
      0,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ]
  }
}

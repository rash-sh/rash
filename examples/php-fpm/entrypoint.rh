#!/usr/bin/env -S rash
#
# based on https://github.com/dcarrillo/docker-phpfpm
#

- name: "Configure opcache/php"
  template:
    src: "{{ item }}.j2"
    dest: "{{ item }}"
    mode: "0644"
  loop:
    - "{{ rash.dir }}/opcache.ini"
    - "{{ rash.dir }}/www.conf"

- name: "Run php-fpm"
  command:
    cmd: "echo fake-php-fpm"
    transfer_pid_1: true

